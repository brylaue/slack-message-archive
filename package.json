{
  "name": "slack-message-viewer",
  "version": "1.0.0",
  "description": "A web application to view Slack messages older than 90 days",
  "main": "server.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "render-build": "npm install && cd client && npm install && npm run build",
    "postinstall": "cd client && npm install && npm run build"
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop slack-message-viewer",
    "restart:pm2": "pm2 restart slack-message-viewer",
    "logs:pm2": "pm2 logs slack-message-viewer",
    "monitor:pm2": "pm2 monit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "@slack/web-api": "^6.8.1",
    "express-session": "^1.17.3",
    "session-file-store": "^1.2.0",
    "helmet": "^7.1.0",
    "node-fetch": "^2.7.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": ["slack", "messages", "history", "web-app"],
  "author": "Your Name",
  "license": "MIT"
}